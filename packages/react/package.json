{
  "name": "@micro-router/react",
  "description": "a small, strongly-typed router for React",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "typecheck": "tsc -b",
    "lint": "pnpm run /^lint:[^:]*$/",
    "lint:eslint": "eslint --max-warnings=0",
    "lint:prettier": "prettier --ignore-path=../../.prettierignore --check .",
    "test": "vitest run",
    "build": "tsdown"
  },
  "peerDependencies": {
    "@micro-router/core": "workspace:^",
    "@micro-router/history": "workspace:^",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@micro-router/core": "workspace:^",
    "@micro-router/history": "workspace:^",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/browser-playwright": "catalog:",
    "playwright": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "vitest-browser-react": "catalog:"
  }
}
